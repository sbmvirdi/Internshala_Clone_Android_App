<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shubamvirdi.internshala.Activities.DetailedWorkshop">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/dw_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/cd_for_dw"
        android:src="@drawable/detail_workshop_icon"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPadding="4dp"
        android:layout_below="@id/dw_logo"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/overpass_semibold"
                android:text="@string/card_title"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/dw_card_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:id="@+id/dw_card_subtitle"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/overpass_semibold"
                android:layout_below="@id/dw_card_title"
                android:layout_marginStart="10dp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:layout_marginTop="40dp"
                android:layout_below="@id/dw_card_subtitle"
                android:layout_marginStart="10dp"
                android:id="@+id/dw_startdateLabel"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/_25th_june"
                android:layout_toEndOf="@id/dw_startdateLabel"
                android:layout_below="@id/dw_card_subtitle"
                android:layout_marginTop="40dp"
                android:id="@+id/dw_startdate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:layout_below="@id/dw_startdateLabel"
                android:layout_marginLeft="10dp"
                android:id="@+id/dw_locationLabel"
                android:layout_marginStart="10dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dw_startdateLabel"
                android:layout_below="@id/dw_startdateLabel"
                android:text="@string/gurugram"
                android:layout_marginLeft="40dp"
                android:id="@+id/dw_location"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@id/dw_startdateLabel"
                tools:ignore="RtlHardcoded" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:layout_below="@id/dw_location"
                android:layout_marginLeft="10dp"
                android:id="@+id/dw_timeLabel"
                android:layout_marginStart="10dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dw_startdateLabel"
                android:layout_below="@id/dw_location"
                android:layout_marginStart="40dp"
                android:text="@string/_10_00_pm"
                android:id="@+id/dw_time"/>







        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:background="@drawable/button_bg"
        android:textColor="#fff"
        android:id="@+id/registerWorkshop"
        android:fontFamily="@font/overpass_semibold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>



</RelativeLayout>
